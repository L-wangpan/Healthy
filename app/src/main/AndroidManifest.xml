<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthy.wp">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--the following two permissions are required if you want to take photo in selector-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplycation"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".UserLogin.View.LandActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Personal.View.PlanActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".UserMenu.View.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MyView.ShowDataActivity"
            android:label="@string/title_activity_show_data" />
        <activity
            android:name=".Personal.View.SetUpActivity"
            android:label="@string/title_activity_set_up" />
        <activity
            android:name=".UserLogin.View.RegistActivity"
            android:label="@string/title_activity_regist" />

        <activity
            android:name=".gallery.king.photo.activity.AlbumActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="gallery.king.photo.activity.ImageFile"></activity>
        <activity android:name="gallery.king.photo.activity.ShowAllPhoto"></activity>
        <activity android:name=".gallery.king.photo.util.BitmapCache"></activity>
        <activity android:name="gallery.king.photo.activity.GalleryActivity"></activity>
        <activity
            android:name=".gallery.king.photo.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>